#!/usr/bin/env perl
# Created: 14 Jan 2017
# Author: Thomas Hackl, thackl@lim4.de
use warnings;
use strict;

if (@ARGV){
    print "seq-fq2fa <.fq >.fa\n";
    exit 0;
}

my $lw = 80;
my ($h, $s, $d, $q, $sw);

while($h=<>,$s=<>,$d=<>,$q=<>){
    substr($h, 0, 1, '>');
    $sw="";
    $sw.= $_."\n" for unpack "(A$lw)*", $s;
    chomp($sw);
    print $h,$sw,"\n";
}
